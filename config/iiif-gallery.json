{
	"development": {
		"client": "public/app",
		"server": {
			"bind": "0.0.0.0"
		},
		"logger": {
			"module": "winston",
			"config": {
				"web": {
					"file": { "level": "debug" },
					"console": { "level": "debug", "colorize": true, "timestamp": true, "prettyPrint": true }
				},
				"modules": {
					"file": { "level": "debug" },
					"console": { "level": "debug", "colorize": true, "timestamp": true, "prettyPrint": true }
				},
				"main": {
					"file": { "level": "debug" },
					"console": { "level": "debug", "colorize": true, "timestamp": true, "prettyPrint": true }
				}
			}
		}
	},
	"production": {
	},
	"defaults": {
		"client": "public/app",
		"server": {
			"port": 3000
		},
		"logger": {
			"module": "winston",
			"config": {
				"web": {
					"file": {
						"level": "info",
						"filename": "logs/access.log",
						"maxSize": 2048000,
						"maxFiles": 5,
						"tailable": true
					}
				},
				"modules": {
					"file": {
						"level": "info",
						"filename": "logs/showcase.log",
						"maxSize": 2048000,
						"maxFiles": 5,
						"tailable": true
					}
				},
				"main": {
					"file": {
						"level": "info",
						"filename": "logs/showcase.log",
						"maxSize": 2048000,
						"maxFiles": 5,
						"tailable": true
					}
				}
			}
		}
	}
}

